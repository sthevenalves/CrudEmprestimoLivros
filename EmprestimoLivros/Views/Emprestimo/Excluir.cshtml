@model EmprestimoModel //apos colocar os asp-for de acordo com as variaveis da model Emprestimo, deve-se importar a model p/ a maquina saber quem é quem
@{
    //título da página
    ViewData["title"] = "Excluir Emprestimo";
}


<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Empréstimos</h1>
    </div>
    <form method="post" asp-controller="Emprestimo" asp-action="Ecluir">
        <input type="hidden" asp-for="Id" />
        <h2 class="text-light text-center">Tem certeza que deseja excluir o registro abaixo?</h2>
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="recebedor" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label  text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="fornecedor" placeholder="Quem está emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="livro" placeholder="Qual o livro que está sendo emprestado" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>


    </form>
</div>